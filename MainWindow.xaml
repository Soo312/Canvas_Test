<Window x:Class="Canvas_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvas_Test"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <local:MyCanvas Width="30000" Height="30000" x:Name="canvas" Background="AliceBlue">
                <Rectangle Canvas.Left="0" Canvas.Top="0" Width="100" Height="100"  />
            </local:MyCanvas>
        </ScrollViewer>

    </Grid>
</Window>
